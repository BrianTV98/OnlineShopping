<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="flashViewModel"
            type="com.example.onlineshopping.ui.fragment.home.widget.flash_sale.FlashViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:background="@color/bg_item_flash_sale"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_discount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{flashViewModel.flashSale.discount}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imv_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="120dp"
            app:layout_constraintCircleRadius="5dp"
            android:background="@color/colorPrimary"
            android:layout_height="120dp"
            android:contentDescription="@string/item" />

        <TextView
            android:id="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@id/imv_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{flashViewModel.flashSale.price.toString()}"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_backgroud_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_inventory"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Số lượng tồn"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>