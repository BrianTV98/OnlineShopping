<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/default_margin_normal"
    android:layout_marginEnd="@dimen/default_margin_normal"
    android:layout_marginTop="@dimen/default_margin_small"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="@dimen/default_margin_small"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/default_margin_normal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv_bag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/default_margin_normal"
            android:layout_width="50dp"
            android:src="@drawable/ic_e_m"
            android:layout_height="50dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/gl"
            app:layout_constraintGuide_percent="0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title_em"
            android:layout_marginStart="@dimen/default_margin_normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_bag"
            android:text="@string/e_m_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_discount"
            android:layout_marginTop="@dimen/default_margin_normal"
            app:layout_constraintStart_toStartOf="@id/tv_title_em"
            android:text="Ưu đãi đọc quyền"
            app:layout_constraintTop_toBottomOf="@id/tv_title_em"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/tv_discount"
            android:text="Thanh toán 1 chạm"
            app:layout_constraintTop_toBottomOf="@id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/gl"
            android:text="Hoàn tiền nhanh chóng"
            app:layout_constraintTop_toTopOf="@id/tv_discount"
            android:layout_marginStart="@dimen/default_margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/gl"
            android:text="Giao dịch an toàn"
            app:layout_constraintTop_toBottomOf="@id/tv_discount"
            android:layout_marginStart="@dimen/default_margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>